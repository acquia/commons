      return views_embed_view('trusted_contacts');

    case 'invitations':
      $wrapper = entity_metadata_wrapper('user', $user);
      $count = $wrapper->field_unread_invitations->value();

      drupal_set_title(t('Private Messages & invitations'));

      return views_embed_view('trusted_contacts_invitations');

    case 'messages':
      module_load_include('inc', 'privatemsg', 'privatemsg.pages');

      $wrapper = entity_metadata_wrapper('user', $user);
      $count = $wrapper->field_unread_messages->value();

      drupal_set_title(t('Private Messages & invitations'));

