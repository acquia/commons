/**
 * Title callback; Trusted contacts related titles.
 */
function commons_trusted_contacts_tab_title($tab) {
  global $user;

  switch ($tab) {
    case 'contacts':
      $query = new EntityFieldQuery();
      $count = $query
        ->entityCondition('entity_type', 'og_membership')
        ->propertyCondition('group_type', 'user')
        ->propertyCondition('entity_type', 'user')
        ->propertyCondition('gid', $user->uid)
        ->propertyCondition('etid', $user->uid, '<>')
        ->propertyCondition('state', 1)
        ->count()
        ->execute();

      return t('Trusted Contacts (@count)', array('@count' => $count));

    case 'invitations':
      $wrapper = entity_metadata_wrapper('user', $user);
      $count = $wrapper->field_unread_invitations->value();
      $count = $count ? $count : 0;

      return t('Invitations (@count)', array('@count' => $count));

    case 'messages':
      module_load_include('inc', 'privatemsg', 'privatemsg.pages');

      $wrapper = entity_metadata_wrapper('user', $user);
      $count = $wrapper->field_unread_messages->value();
      $count = $count ? $count : 0;

      return t('Messages (@count)', array('@count' => $count));
  }
  return;
}

/**
 * Page callback; Trusted contacts related pages.
 */
function commons_trusted_contacts_tab($tab) {
  global $user;

  switch ($tab) {
    case 'contacts':
      $query = new EntityFieldQuery();
      $count = $query
        ->entityCondition('entity_type', 'og_membership')
        ->propertyCondition('group_type', 'user')
        ->propertyCondition('entity_type', 'user')
        ->propertyCondition('gid', $user->uid)
        ->propertyCondition('etid', $user->uid, '<>')
        ->propertyCondition('state', 1)
