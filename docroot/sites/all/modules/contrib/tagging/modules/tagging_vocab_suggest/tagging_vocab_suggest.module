function tagging_vocab_suggest_tagging_suggestions($vid, $node) {
  $result  = db_query('select * from {term_data} where vid=%d',$vid);
  $suggestions = array();
  while ($term = db_fetch_object($result)) {
    $suggestions[] = array('#weight' => $term->weight, '#name' => $term->name);
  }

  return $suggestions;
}