function tagging_extractor_suggest_tagging_suggestions($vid, $node) {
  $suggestions = array();
  $terms = extractor_extract($node->body);

  $result = array();
  foreach($terms as $key => $term) {
    $result[] = array('#weight' => (1/$key), '#name' => $term);
  }
  return $result;
}