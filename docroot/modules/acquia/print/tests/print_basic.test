  }

  /**
   * Implementation of setUp().
   */
  function setUp() {
    parent::setUp();

    // User to set up print.
//    $this->web_user = $this->drupalCreateUserRolePerm(array('administer print'));

//    $this->drupalGet('logout');
//    $this->drupalLoginUser($this->web_user);

